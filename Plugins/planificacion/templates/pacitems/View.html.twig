{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle del Ítem PAC</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9">{{ fsc.model.codigo }}</dd>
                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">{{ fsc.model.descripcion }}</dd>
                <dt class="col-sm-3">Partida:</dt>
                <dd class="col-sm-9">{{ fsc.getPartidaNombre(fsc.model.partida_id) }}</dd>
                <dt class="col-sm-3">Tipo de Compra:</dt>
                <dd class="col-sm-9">{{ fsc.model.tipo_compra }}</dd>
                <dt class="col-sm-3">Procedimiento:</dt>
                <dd class="col-sm-9">{{ fsc.model.procedimiento }}</dd>
                <dt class="col-sm-3">Monto Referencial:</dt>
                <dd class="col-sm-9">{{ fsc.model.monto_referencial|number_format(2) }}</dd>
                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">{{ fsc.model.estado }}</dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}