{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle de la Partida Presupuestaria</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9">{{ fsc.model.codigo }}</dd>
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">{{ fsc.model.nombre }}</dd>
                <dt class="col-sm-3">Subproceso:</dt>
                <dd class="col-sm-9">{{ fsc.getSubprocesoNombre(fsc.model.subproceso_id) }}</dd>
                <dt class="col-sm-3">Año:</dt>
                <dd class="col-sm-9">{{ fsc.model.anio }}</dd>
                <dt class="col-sm-3">Presupuesto Codificado:</dt>
                <dd class="col-sm-9">{{ fsc.model.presupuesto_codificado|number_format(2) }}</dd>
                <dt class="col-sm-3">Monto Comprometido:</dt>
                <dd class="col-sm-9">{{ fsc.model.monto_comprometido|number_format(2) }}</dd>
                <dt class="col-sm-3">Monto Devengado:</dt>
                <dd class="col-sm-9">{{ fsc.model.monto_devengado|number_format(2) }}</dd>
                <dt class="col-sm-3">Monto Pagado:</dt>
                <dd class="col-sm-9">{{ fsc.model.monto_pagado|number_format(2) }}</dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}