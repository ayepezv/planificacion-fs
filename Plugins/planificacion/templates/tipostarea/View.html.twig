{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle del Tipo de Tarea</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">{{ fsc.model.nombre }}</dd>
                <dt class="col-sm-3">Actividad:</dt>
                <dd class="col-sm-9">{{ fsc.getActividadNombre(fsc.model.actividad_id) }}</dd>
                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">{{ fsc.model.descripcion }}</dd>
                <dt class="col-sm-3">Tiempo Estimado (min):</dt>
                <dd class="col-sm-9">{{ fsc.model.tiempo_estimado_min }}</dd>
                <dt class="col-sm-3">Requiere Evidencia:</dt>
                <dd class="col-sm-9">{% if fsc.model.requiere_evidencia %}Sí{% else %}No{% endif %}</dd>
                <dt class="col-sm-3">Hito Presupuestario:</dt>
                <dd class="col-sm-9">{% if fsc.model.es_hito_presupuestario %}Sí{% else %}No{% endif %}</dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}