{% extends "Master/ListController.html.twig" %}

{% block bodyTop %}
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-sm-6">
            <h1><i class="fas fa-user-tie"></i> Puestos</h1>
        </div>
        <div class="col-sm-6 text-right">
            <a href="{{ fsc.url() }}?action=new" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo Puesto
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Denominación</th>
                <th>Grupo Ocupacional</th>
                <th>Unidad Administrativa</th>
                <th class="text-right">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for puesto in fsc.puestos %}
            <tr>
                <td>{{ puesto.denominacion }}</td>
                <td>{{ puesto.grupo_ocupacional }}</td>
                <td>{{ puesto.unidad_administrativa }}</td>
                <td class="text-right">
                    <a href="{{ fsc.url() }}?action=view&id={{ puesto.id }}" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ fsc.url() }}?action=edit&id={{ puesto.id }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ fsc.url() }}?action=delete&id={{ puesto.id }}" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro?')">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4" class="text-center">No hay puestos registrados</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}