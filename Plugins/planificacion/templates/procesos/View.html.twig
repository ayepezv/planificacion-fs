{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle del Proceso</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Código:</dt>
                <dd class="col-sm-9">{{ fsc.model.codigo }}</dd>
                <dt class="col-sm-3">Nombre:</dt>
                <dd class="col-sm-9">{{ fsc.model.nombre }}</dd>
                <dt class="col-sm-3">Tipo:</dt>
                <dd class="col-sm-9">{{ fsc.model.tipo }}</dd>
                <dt class="col-sm-3">Proceso Padre:</dt>
                <dd class="col-sm-9">
                    {% if fsc.model.proceso_padre_id %}
                        {{ fsc.getProcesoPadreNombre(fsc.model.proceso_padre_id) }}
                    {% else %}
                        --
                    {% endif %}
                </dd>
                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">{{ fsc.model.descripcion }}</dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}