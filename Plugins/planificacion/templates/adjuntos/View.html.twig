{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle del Adjunto</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre del Archivo:</dt>
                <dd class="col-sm-9">{{ fsc.model.nombre_archivo }}</dd>
                <dt class="col-sm-3">Tarea:</dt>
                <dd class="col-sm-9">{{ fsc.getTareaNombre(fsc.model.tarea_id) }}</dd>
                <dt class="col-sm-3">Tipo:</dt>
                <dd class="col-sm-9">{{ fsc.model.tipo }}</dd>
                <dt class="col-sm-3">Fecha de Subida:</dt>
                <dd class="col-sm-9">{{ fsc.model.fecha_subida|date('d/m/Y H:i') }}</dd>
                <dt class="col-sm-3">Descargar:</dt>
                <dd class="col-sm-9">
                    <a href="{{ fsc.url() }}?action=download&id={{ fsc.model.id }}" class="btn btn-success btn-sm">
                        <i class="fas fa-download"></i> Descargar
                    </a>
                </dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}