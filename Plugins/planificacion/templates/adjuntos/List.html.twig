{% extends "Master/ListController.html.twig" %}

{% block bodyTop %}
<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-sm-6">
            <h1><i class="fas fa-paperclip"></i> Adjuntos</h1>
        </div>
        <div class="col-sm-6 text-right">
            <a href="{{ fsc.url() }}?action=new" class="btn btn-success">
                <i class="fas fa-plus"></i> Nuevo Adjunto
            </a>
        </div>
    </div>
</div>
{% endblock %}

{% block body %}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre del Archivo</th>
                <th>Tarea</th>
                <th>Tipo</th>
                <th>Fecha de Subida</th>
                <th class="text-right">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for adjunto in fsc.adjuntos %}
            <tr>
                <td>{{ adjunto.nombre_archivo }}</td>
                <td>{{ fsc.getTareaNombre(adjunto.tarea_id) }}</td>
                <td>{{ adjunto.tipo }}</td>
                <td>{{ adjunto.fecha_subida|date('d/m/Y H:i') }}</td>
                <td class="text-right">
                    <a href="{{ fsc.url() }}?action=view&id={{ adjunto.id }}" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="{{ fsc.url() }}?action=edit&id={{ adjunto.id }}" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a href="{{ fsc.url() }}?action=delete&id={{ adjunto.id }}" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro?')">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center">No hay adjuntos registrados</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}