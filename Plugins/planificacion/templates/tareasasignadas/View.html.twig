{% extends "Master/ViewController.html.twig" %}

{% block body %}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h2>Detalle de la Tarea Asignada</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tipo de Tarea:</dt>
                <dd class="col-sm-9">{{ fsc.getTipoTareaNombre(fsc.model.tipo_tarea_id) }}</dd>
                <dt class="col-sm-3">Usuario Asignado:</dt>
                <dd class="col-sm-9">{{ fsc.getUsuarioNombre(fsc.model.usuario_id) }}</dd>
                <dt class="col-sm-3">Asignador:</dt>
                <dd class="col-sm-9">{{ fsc.getUsuarioNombre(fsc.model.asignador_id) }}</dd>
                <dt class="col-sm-3">Fecha Asignación:</dt>
                <dd class="col-sm-9">{{ fsc.model.fecha_asignacion|date('d/m/Y') }}</dd>
                <dt class="col-sm-3">Fecha Límite:</dt>
                <dd class="col-sm-9">{{ fsc.model.fecha_limite|date('d/m/Y') }}</dd>
                <dt class="col-sm-3">Prioridad:</dt>
                <dd class="col-sm-9">{{ fsc.getPrioridadNombre(fsc.model.prioridad_id) }}</dd>
                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">{{ fsc.getEstadoTareaNombre(fsc.model.estado_id) }}</dd>
                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">{{ fsc.model.descripcion }}</dd>
            </dl>
            <a href="{{ fsc.url() }}?action=edit&id={{ fsc.model.id }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="{{ fsc.url() }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
{% endblock %}